<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/rover"
            android:alignmentMode="alignBounds">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tblButtons"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/cmdScare"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="\u25B2\n\u25B2"
                android:id="@+id/cmdForward"
                android:layout_column="2"
                android:onClick="cmdActionClicked"
                />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="\u25B2"
                android:id="@+id/cmdFor_A_Bit"
                android:layout_column="2"
                android:onClick="cmdActionClicked"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="\u25C0\u25C0"
                android:id="@+id/cmdLeft"
                android:layout_column="0"
                android:onClick="cmdActionClicked"/>

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="\u25C0"
                android:id="@+id/cmdLeft_A_Bit"
                android:layout_column="1"
                android:onClick="cmdActionClicked"/>

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="Stop"
                android:id="@+id/cmdStop"
                android:layout_row="2"
                android:layout_column="2"
                android:onClick="cmdActionClicked"/>

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="\u25B6"
                android:id="@+id/cmdRight_A_Bit"
                android:layout_column="3"
                android:onClick="cmdActionClicked"/>

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="\u25B6\u25B6"
                android:id="@+id/cmdRight"
                android:layout_column="4"
                android:onClick="cmdActionClicked"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="\u25BC"
                android:id="@+id/cmdBack_A_Bit"
                android:layout_column="2"
                android:onClick="cmdActionClicked"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="\u25BC\n\u25BC"
                android:id="@+id/cmdBack"
                android:layout_column="2"
                android:onClick="cmdActionClicked"/>


        </TableRow>
    </TableLayout>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:text="Scare"
        android:id="@+id/cmdScare"
        android:layout_row="1"
        android:layout_column="1"
        android:onClick="cmdActionClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>




</RelativeLayout>