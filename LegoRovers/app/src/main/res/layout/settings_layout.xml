<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/settings"
              android:weightSum="1"
              android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Robot Bluetooth Address"
            android:id="@+id/textView2"
            android:layout_weight="0.00"
            android:padding="10dp"
            android:textSize="25dp"/>

        <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtBT1"
            android:layout_weight="0.05"
            android:text="10"
            android:textSize="25dp"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="."
            android:id="@+id/textView"
            android:layout_weight="0.00"
            android:textSize="25dp"/>

        <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtBT2"
            android:layout_weight="0.05"
            android:text="0"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="."
            android:id="@+id/textView3"
            android:layout_weight="0.00"
            android:textSize="25dp"/>

        <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtBT3"
            android:layout_weight="0.05"
            android:text="1"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="."
            android:id="@+id/textView4"
            android:layout_weight="0.00"
            android:textSize="25dp"/>

        <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtBT4"
            android:layout_weight="0.05"
            android:text="1"
            android:textSize="25dp"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/cmdConnect"
        android:layout_gravity="center_horizontal"
        android:onClick="cmdConnectClicked"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pgbStatus"
        android:progress="50"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Please ensure that the robot is in the list of paired devices"
        android:id="@+id/txtMessages"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:background="#ffe0e0e0"
        android:padding="5dp"
        />

</LinearLayout>
    <!--
        Only used for easier design of view, copyied into activity_main.xml
    -->
