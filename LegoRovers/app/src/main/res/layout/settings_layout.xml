<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/settings"
              android:weightSum="1"
              android:orientation="vertical"
              android:background="#ffe2e2e2">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Detection Thresholds"
        android:id="@+id/textView9"
        android:layout_weight="0.00"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:focusableInTouchMode="false"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#ffffffff"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="0.00"
        android:background="#ffafafaf">
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Obstacle Distance"
            android:id="@+id/textView8"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/txtObs"
            android:text="0.4"
            android:singleLine="true"
            android:clickable="true"
            android:maxLength="3"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Water Values"
            android:id="@+id/textView15"
            android:layout_weight="0.00"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/txtwLower"
            android:text="0.06"
            android:singleLine="true"
            android:clickable="true"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="to"
            android:id="@+id/textView16"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/txtwUpper"
            android:text="0.09"
            android:singleLine="true"
            android:clickable="true"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="0.00"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Path Light"
            android:id="@+id/textView17"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/txtPath"
            android:text="0.06"
            android:singleLine="true"
            android:clickable="true"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="right"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set"
        android:id="@+id/button4"
        android:layout_gravity="center"
        android:onClick="cmdSetDetection"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="0.00"
        android:background="#ffeeeeee"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Robot Connection"
        android:id="@+id/textView14"
        android:layout_weight="0.00"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:focusableInTouchMode="false"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#ffffffff"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="0.00"
        android:background="#ffafafaf"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Robot Bluetooth Address"
        android:id="@+id/textView2"
        android:layout_weight="0.00"
        android:padding="10dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <EditText
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtBT1"
            android:text="101"
            android:textSize="25dp"
            android:singleLine="true"
            android:clickable="true"
            android:maxLength="3"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="."
            android:id="@+id/textView4"
            android:layout_weight="0.00"
            android:textSize="25dp"/>

        <EditText
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtBT3"
            android:layout_weight="0.05"
            android:text="1"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_gravity="top|center"
            android:gravity="center"
            android:maxLength="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="."
            android:id="@+id/textView3"
            android:layout_weight="0.00"
            android:textSize="25dp"/>

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtBT2"
            android:layout_weight="0.05"
            android:text="0"
            android:textSize="25dp"
            android:gravity="center"
            android:maxLength="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="."
            android:id="@+id/textView"
            android:layout_weight="0.00"
            android:textSize="25dp"/>

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtBT4"
            android:layout_weight="0.05"
            android:text="1"
            android:textSize="25dp"
            android:gravity="center"
            android:maxLength="3"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/cmdConnect"
        android:layout_gravity="center_horizontal"
        android:onClick="cmdConnectClicked"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pgbStatus"
        android:progress="0"
        android:max="4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Please ensure that the robot is in the list of paired devices"
        android:id="@+id/txtMessages"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:background="#ffe0e0e0"
        android:padding="5dp"
        />

</LinearLayout>
